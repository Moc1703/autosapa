# AutoSapa Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Set a strong random secret for JWT tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here-min-32-chars

# REQUIRED: Set a strong admin key for admin panel access
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ADMIN_KEY=your-admin-key-here

# Set to 'production' in production environment
# This enables HSTS and disables /preview-app route
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# Optional: Database path (default: ./data/database.sqlite)
# DB_PATH=./data/database.sqlite
